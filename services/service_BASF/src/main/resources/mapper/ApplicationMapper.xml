    <sql id="selectApplicationVo">
		SELECT
		ap.applicationid,
		ap.customername,
		ap.applicationstatus,
		ap.workcontent,
		ap.deviceinformationid,
		ap.region,
		ap.device,
		ap.floor,
		ap.status,
		ap.createon,
		ap.createby,
        dev.devicename
		FROM
		application ap
		LEFT JOIN
		deviceinformation dev
		ON ap.deviceinformationid =
		dev.deviceinformationid
		where ap.status='0'
	</sql>


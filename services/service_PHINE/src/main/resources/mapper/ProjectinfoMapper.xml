    </collection>
  </resultMap>

  <select id="getProjectinfoById" resultMap="ProjectinfoUser">
    SELECT
      pro.id,
      pro.companyid,
      pro.projectid,
      pro.chipid,
      pro.projectname,
      pro.starttime,
      pro.endtime,
      p2u.id puserid,
      p2u.userid userid
    FROM
      projectinfo pro
    LEFT JOIN
      project2user p2u
    ON
      pro.id = p2u.projectid

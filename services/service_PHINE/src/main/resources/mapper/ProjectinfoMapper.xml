    <result column="projectdescription" jdbcType="LONGVARCHAR" property="projectdescription" />
    <result column="remarks" jdbcType="LONGVARCHAR" property="remarks" />
  </resultMap>
  <select id="getProjectInfoList" resultType="com.nt.dao_PHINE.Vo.ProjectListVo">
    SELECT
      a.id,
      a.projectname,
      a.createby,
      COUNT(b.id) as usercnt,
      COUNT(c.id) as devicecnt,
      COUNT(DISTINCT(d.deviceid)) as errorcnt
    FROM
      projectinfo a
    LEFT JOIN
      project2user b
    ON
      a.id = b.projectid
    LEFT JOIN
      project2device c
    ON
      a.id = c.projectid
    LEFT JOIN
      devicestatus d
    ON
      c.deviceid = d.deviceid
    AND
      d.status = '0'
    WHERE
    IFNULL(a.status, '0') = '0'
    GROUP BY
      a.id,
      a.projectname,
      a.createby
  </select>
  <update id="updateProjectInfo" parameterType="com.nt.dao_PHINE.Projectinfo">
    UPDATE projectinfo
    SET projectname = #{projectname},
        projectdescription = #{projectdescription},
        chipid = #{chipid},
        modifyby = #{modifyby},
        modifyon = #{modifyon}
    WHERE id = #{id}
  </update>
  <select id="getProjectInfo" resultType="com.nt.dao_PHINE.Vo.ProjectListVo">
    SELECT id,projectid,projectname,projectdescription,chipid,companyid
    FROM projectinfo
    <where>
      <if test="companyid != '' and projectid != ''">
        and companyid = #{companyid}
        and projectid = #{projectid}
      </if>
      <if test="companyid == '' and projectid != ''">
        and id = #{projectid}
      </if>
    </where>
  </select>


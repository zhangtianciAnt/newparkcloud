<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.nt.service_Org.mapper.DictionaryMapper">
    <select id="getDictionary" parameterType="com.nt.dao_Org.Dictionary" resultType="com.nt.dao_Org.Dictionary">
        SELECT
        code,
        type,
        value1,
        value2,
        value3,
        value4,
        value5,
        value6,
        value7,
        value8,
        value9,
        pcode
        FROM
        dictionary
        WHERE STATUS = '0'
        <if test="code != null and code != ''" >
            AND  code like CONCAT(#{code},'%')
            AND (TYPE IS NULL OR TYPE = '')
        </if>
        <if test="pcode != null and pcode != ''" >
            AND pcode = #{pcode,jdbcType=VARCHAR}
        </if>
    </select>
    <select id="selectOrder" parameterType="com.nt.dao_Org.Dictionary" resultType="com.nt.dao_Org.Dictionary">
        select * from dictionary
        <if test="code != null and code != ''" >
            WHERE  pcode = #{code}
        </if>
        ORDER BY orderdic asc
    </select>
</mapper>

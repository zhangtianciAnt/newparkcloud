<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.nt.service_pfans.PFANS1000.mapper.AwardDetailMapper">
        <select id="getAdInfoList" parameterType="list" resultType="com.nt.dao_Pfans.PFANS1000.AwardDetail">
            SELECT
                BUDGETCODE,
                DEPART,
                sum(AWARDMONEY) as AWARDMONEY
            FROM
                awarddetail
            where
                1=1
            <if test="awardIdList != null and awardIdList.size() > 0 ">
                AND award_id in
                <foreach item="item" index="index" collection="awardIdList" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>
            group by
                BUDGETCODE,
                DEPART
            ORDER BY
                BUDGETCODE
    </select>
</mapper>


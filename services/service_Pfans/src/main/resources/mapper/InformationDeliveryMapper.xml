<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.nt.service_pfans.PFANS8000.mapper.InformationDeliveryMapper">
	<select id="getInformation" resultType="com.nt.dao_Pfans.PFANS8000.InformationDelivery">
		select * from information
		where 1=1
		<if test="owners != null and owners.size() > 0">
			and (owner in
			<foreach item="item" index="index" collection="owners"
					 open="(" separator="," close=")">
				#{item}
			</foreach>
			)
		</if>
		order by createon desc
	</select>


<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.nt.service_pfans.PFANS2000.mapper.TalentPlanMapper">
    <select id="selectByuserId" resultType="com.nt.dao_Pfans.PFANS2000.TalentPlan">
        SELECT t.*
        FROM `talentplan` as t
        where  1=1 and year= #{years}
        <if test="userIdList != null and userIdList.size() > 0 ">
            and
            t.user_id in
            <foreach item="item" index="index" collection="userIdList"
                     open="(" separator="," close=")">
                #{item}
            </foreach>
        </if>
	</select>
</mapper>
